@page "{id:int?}" 
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Hero Section -->
<section class="relative overflow-hidden bg-gradient-to-br from-azure-600 via-azure-700 to-azure-900 dark:from-azure-800 dark:via-azure-900 dark:to-gray-900">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-10">
        <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
            <defs>
                <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
                    <path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="0.5"/>
                </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#grid)"/>
        </svg>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8 lg:py-10">
        <div class="text-center">
            <!-- Title -->
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-white tracking-tight">
                Azure 
                <span class="bg-clip-text text-transparent bg-gradient-to-r from-cyan-300 to-blue-300">Friday</span>
            </h1>
            
            <!-- Tagline -->
            <p class="mt-2 text-xl sm:text-2xl text-azure-100 font-medium max-w-2xl mx-auto">
                Trusted voices at the center of cloud computing
            </p>
            
            <!-- Description -->
            <p class="mt-3 text-base sm:text-lg text-azure-200 max-w-3xl mx-auto leading-relaxed">
                Learn Azure directly from the engineers who build it. Live demos. Real questions. Practical cloud skills you can use today.
            </p>
            
            <!-- Subscribe Buttons -->
